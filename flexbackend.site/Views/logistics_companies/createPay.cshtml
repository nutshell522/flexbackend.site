@model Orders.ViewModels.PayMethodVM

@{
    ViewBag.Title = "createPay";
}

<style>
    .modal-container {
        width: 400px;
        height: 300px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        background-color: #fff;
    }

    .modal-title {
        text-align: center;
        margin-bottom: 20px;
    }

    .modal-actions {
        text-align: center;
    }

        .modal-actions .btn {
            margin: 0 10px;
        }
</style>

<div class="modal-container">
    <h2 class="modal-title">新增付款方式</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="mb-3">
                @Html.LabelFor(model => model.pay_method, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.pay_method, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pay_method, "", new { @class = "text-danger" })
            </div>

            <div class="modal-actions">
                <input type="submit" value="新增" class="btn btn-primary" />
                @Html.ActionLink("取消新增", "Logistics_companiesIndex", null, new { @class = "btn btn-primary text-bg-light" })
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
