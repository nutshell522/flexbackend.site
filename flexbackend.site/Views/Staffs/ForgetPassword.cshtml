@using (Html.BeginForm())
{

    //@Html.AntiForgeryToken()

    <div id="login-container">
        <div class="row">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div id="loginText" class="mb-3">
                <h3>忘記密碼嗎?</h3>
            </div>
            <div class="mt-1" id="useraccount">
                <div class="text"><span class="me-3">帳 號</span></div>
                @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control" } })

            </div>
            <div class="mb-3 text-start v">
                @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
            </div>

            <div id="userpassword">
                <div class="text"><span class="me-3">信 箱</span></div>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
               
            </div>
            <div class="mb-3 text-start v"> 
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mt-3">
                <input type="submit" value="確 認" class="btn btn-outline-light" />
                <a href="@Url.Action("Login", "Staffs", new { area = "" })" class="btn btn-outline-light ms-4">返 回 登 入</a>
            </div>
        </div>
    </div>
    
}

