@model Members.dll.Models.ViewsModels.LoginVM

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@section Styles
{
    <style>
        #login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 80px 0;
            width: 500px; /*外框寬度*/
            height: 400px; /*外框高度*/
            /*background-color: #0B284A; */ /*外框背景*/
            border: 3px /*solid #BB3E20*/;
            border-radius: 15px; /*外框圓角*/
            /*border-top: 50px solid #BB3E20;*/ /*上面顏色的高度*/
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
            /*定位對齊*/
            position: absolute;
            margin: auto;
            top: calc((100vh - 400px) / 2);
            left: calc((100% - 500px) / 2 - 150px);
            text-align: center;
            backdrop-filter: blur(6px);
            -webkit-backdrop-filter: blur(6px);
            background:rgba(30,30,50,.4)
        }

        body {
            background-color: #3C5067;
        }
        h3{
            font-size:40px;
            font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif
        }

        #useraccount, #userpassword {
            color: #BB3E20;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        #loginText {
            color: white;
            padding-bottom: 10px;
            font-size: larger;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            font-weight: bold;
        }

        .form-control {
            background-color:rgba(124,144,167,.7);
            border: none;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
            font-size:20px;
            color:black;
            font-weight:bold;
        }
            .form-control:focus {
                background-color: rgba(255,255,255,.5);
                outline: none;
            }

            .text {
                margin-right: 10px;
                color: white;
                font-weight: 100;
                font-size: 19px;
            }

        #loginImg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            overflow: hidden;
            object-fit: contain;
            z-index: -1;
        }
        img{
            margin-top:150px;
            margin-left:400px;
            width:1900px;
        }
        .verifyText {
            height: 16px;
            font-weight: bold;
            margin-left: 145px;
            
        }
            .verifyText > span {
                color: #ED4656;
            }
            .btn {
                font-size: 20px;
            }
    </style>

}

<div id="loginImg">
    <img alt="" src="~/Public/Img/FlexLogo.png" />
</div>
@using (Html.BeginForm())
{
    @*@Html.AntiForgeryToken()*@ //這個拿掉就可以更換成_LayoutLogin

    <div id="login-container">
        <div class="row">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div id="loginText" class="mb-3">
                <h3>LOGIN</h3>
            </div>
            <div class="mt-1" id="useraccount">
                <div class="text"><span class="me-3">帳 號</span></div>
                @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control" } })
               
            </div>
            <div class="mb-3 text-start verifyText">
                @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
            </div>

            <div id="userpassword">
                <div class="text"><span class="me-3">密 碼</span></div>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                
            </div class="mb-3">
            <div class="mb-3 text-start verifyText">@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })</div>

            <div class="mt-3">
                <input type="submit" value="登 入" class="btn btn-outline-light" />
                <a href="@Url.Action("ForgetPassword", "Staffs", new { area = "" })" class="btn btn-outline-light ms-4">忘 記 密 碼</a>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

